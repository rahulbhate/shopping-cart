<div class="site-section">
      <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="h3 mb-3 text-black">User Profile</h2>
                    <hr>
                    <h2>My Orders</h2>
                    {{# each orders }}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <ul class="list-group">
                                    {{# each this.items }}
                                        <li class="list-group-item">
                                            <span class="badge badge-primary">{{ this.price }}</span>
                                            {{ this.item.title }} | {{ this.qty }} Units
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="panel-footer">
                                <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
</div>
